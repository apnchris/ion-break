---
import Layout from "../layouts/Layout.astro";
import { getPosts } from "../utils/sanity";

const posts = await getPosts();
---

<Layout title="ION Break">
  <a href="/video" id="clip-button">
    <img
      src="/img/Button_Clip.png"
      alt="Watch the full clip"
      id="clip-button-img"
    />
  </a>

  <a href="/tastes" id="tastes-button">
    <img
      src="/img/Button_Tastes.png"
      alt="Tastes/Fillings"
      id="tastes-button-img"
    />
  </a>
</Layout>

<style>
  #clip-button {
    position: fixed;
    top: 45%;
    left: 53%;
    width: 47vw;
    z-index: 10;
    transform: translate(-100%, -50%);
    max-width: 1000px;
  }

  #tastes-button {
    position: fixed;
    top: 60%;
    left: 41%;
    width: 47vw;
    z-index: 10;
    transform: translate(0%, -50%) rotate(22deg);
    max-width: 1000px;
  }

  #clip-button-img,
  #tastes-button-img {
    width: 100%;
    height: auto;
  }
</style>