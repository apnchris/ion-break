---
// https://docs.astro.build/en/guides/view-transitions/
import { ViewTransitions } from 'astro:transitions';
import { getBackgroundVideo } from '../utils/sanity';

interface Props {
  title: string;
}

const { title } = Astro.props;
const backgroundVideo = await getBackgroundVideo();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />

    <!-- Google fonts -->
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@500;700&family=Inter:wght@500;700;800&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <a
    href="/"
    id="logo-link"
    >
      <img
        src="/img/logo.png"
        alt="Sanity Logo"
        id="logo"
      />
    </a>
    
    <main>
      <div id="background-container">
        {backgroundVideo && (backgroundVideo.videoFile || backgroundVideo.videoUrl) && (
          <video
            id="background-video"
            autoplayNO
            loop
            muted
            playsinline
            poster={backgroundVideo.posterImage}
          >
            <source src={backgroundVideo.videoUrl || backgroundVideo.videoFile} type="video/mp4" />
          </video>
        )}
      </div>
      <slot />
    </main>
  </body>
</html>

<style>

</style>

<style is:global>
  :root {
  }

  @font-face {
    font-family: 'Acumin Variable';
    src: url('/fonts/AcuminVariableConcept.woff2') format('woff2');
  }
  
  @font-face {
    font-family: 'Lab Grotesque Mono';
    src: url('/fonts/LabGrotesqueMonoTRIAL-Regular.woff2') format('woff2');
  }

  .uppercase {
    text-transform: uppercase;
  }

  .display {
    font-family: 'Acumin Variable', sans-serif;
    font-variation-settings: 'wght' 900, 'wdth' 50, 'slnt' 0;
  }

  .mono {
    font-family: 'Lab Grotesque Mono', monospace;
  }

  html {
    background-color: #000;
  }

  body {
    margin: 0;
  }

  #background-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: -1;
    opacity: .38;
  }

  #background-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #logo-link {
    line-height: 0;
    display: block;
  }

  #logo {
    position: fixed;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    width: 250px;
  }
</style>
